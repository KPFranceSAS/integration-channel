{% if field.value|length > 0 %}
	<div class="">
		{{field.value.customer.billing_address.firstname}} {{field.value.customer.billing_address.lastname}}<br/>
		{{field.value.customer.billing_address.street_1}}<br/>
		{% if field.value.customer.billing_address.street_2 is defined %}
			{{field.value.customer.billing_address.street_2}}<br/>
		{% endif %}
		{{field.value.customer.billing_address.zip_code}}
		{{field.value.customer.billing_address.city}},
		{% if field.value.customer.billing_address.state is defined %}
			{{field.value.customer.billing_address.state}},
		{% endif %}
		{{field.value.customer.billing_address.country}}

	</div>
{% else %}
	<span class="badge badge-secondary">
		Data not accessible from Mirakl
	</span>
{% endif %}
